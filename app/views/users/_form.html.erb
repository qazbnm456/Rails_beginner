<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :github %>
        <%= f.text_field :github_link %>

        <%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class: "btn btn-large btn-info" %>
    <% end %>
  </div>
</div>